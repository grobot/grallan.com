extends layout
include ./components

block content
  .container
    +header()
    .post
      h1
        a(href=post.url)
          = post.title
      span.date #{post.date.getMonth()+1}.#{post.date.getDate()}.#{post.date.getFullYear()}
      .post.content
        != post.content
      .tags
        - each tag in post.tags
          a(href=tagUrl(tag))
            span.label.label-info #{tag}
    +footer()
